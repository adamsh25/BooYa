<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TesterActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="BooYa! Tester"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnCameraTester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:onClick="launchCameraTester"
        android:text="Camera tester" />

    <Button
        android:id="@+id/btnMainBooya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCameraTester"
        android:layout_centerHorizontal="true"
        android:onClick="launchMainBooya"
        android:text="Main BooYa!" />

    <Button
        android:id="@+id/btnMazeTester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnMainBooya"
        android:layout_centerHorizontal="true"
        android:onClick="launchMazeTester"
        android:text="Maze Game" />

    <Button
            android:id="@+id/btnFacebookTester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnMazeTester"
            android:layout_centerHorizontal="true"
            android:onClick="launchFacebookTester"
            android:text="Facebook Tester" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@id/btnFacebookTester"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="64dp"
        android:checked="true"
        android:text="Involve Camera Stuff" 
        android:onClick="onCheckboxClicked"/>

</RelativeLayout>